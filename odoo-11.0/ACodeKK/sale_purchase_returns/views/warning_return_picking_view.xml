<odoo>
  <data>
    <record id="warning_return_picking_form" model="ir.ui.view">
        <field name="name">warning.return.picking.form</field>
        <field name="model">warning.return.picking</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" nolabel="1" style="font-size: 15px;"/>
                <separator string="Nhập lý do"/>
                <field name="reason" nolabel="1"/>
                <footer>
                    <button name="apply_invoice" type="object" default_focus="1"
                        string="Xác nhận" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
  </data>
</odoo>