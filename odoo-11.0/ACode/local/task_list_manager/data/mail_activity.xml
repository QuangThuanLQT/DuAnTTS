<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

		<record id="mt_activity_type_internal" model="mail.activity.type">
            <field name="name">Internal</field>
        </record>

		<record id="mt_activity_type_sale" model="mail.activity.type">
            <field name="name">Bán hàng</field>
        </record>

		<record id="mt_activity_type_purchase" model="mail.activity.type">
            <field name="name">Mua hàng</field>
        </record>

		<record id="mt_activity_type_stock" model="mail.activity.type">
            <field name="name">Kho</field>
        </record>

		<record id="mt_activity_type_mrp" model="mail.activity.type">
            <field name="name">Sản xuất</field>
        </record>

        <record id="mt_activities" model="mail.message.subtype">
            <field name="name">Activities</field>
            <field name="default" eval="True"/>
            <field name="internal" eval="True"/>
            <field name="sequence" eval="90"/>
        </record>

        <template id="message_activity_done">
			<div>
			    <p>
			        <strong><span t-attf-class="fa #{activity.activity_type_id.icon}"/></strong> <span t-field="activity.activity_type_id.name"/> done
			        by <span t-field="activity.user_id.name"/>:
			        <span t-if="activity.summary" t-field="activity.summary"/>
			    </p>
			    <div t-field="activity.note" style="margin-left: 8px;"/>
			    <div t-if="activity.feedback" style="margin-top: 8px;">
			        <strong> Feedback</strong>
			    <div t-field="activity.feedback" style="margin-left: 8px;"></div>
			    </div>
			</div>
        </template>

    </data>
</odoo>